{
  "name": "flapjack",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "watch": "nodemon --watch ./models --watch *.js --ignore dist/ --exec npm start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rimraf dist/ && babel ./ --out-dir dist/ --ignore ./node_modules,./.babelrc,./package.json,./npm-debug.log --copy-files",
    "deploy": "rimraf app.yaml && node appYamlGenerator.js && gcloud app deploy",
    "start": "npm run build && node dist/server.js",
    "ds": "docker run -it -p 8000:8000 --rm --env-file ./variables.env flapjack-api-dev"
  },
  "quokka": {
    "babel": true
  },
  "engines": {
    "node": "8.x"
  },
