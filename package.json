{
  "name": "flapjack",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "scripts": {
    "watch": "nodemon --watch ./src --watch *.js --ignore dist/ --exec npm start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rimraf dist/ && babel ./ --out-dir dist/ --ignore ./node_modules,./.babelrc,./package.json,./npm-debug.log,./flow-typed --copy-files",
    "deploy": "rimraf app.yaml && node appYamlGenerator.js && gcloud app deploy",
    "start": "npm run build && node dist/src/server.js",
    "flow": "flow",
    "flow-coverage": "flow-coverage-report -i 'src/**/*.js' -t html -t json -t text --threshold 80",
    "lint": "eslint .",
    "ds": "docker run -it -p 8000:8000 --rm --env-file ./variables.env flapjack-api-dev"
  },
  "engines": {
    "node": "8.x"
  },
  "author": "Conor O'Flanagan",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "graphql": "^0.13.2",
    "jquery": "^3.3.1",
    "jsdom": "11.12.0",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.10",
    "mongoose": "^5.2.6",
    "morgan": "^1.9.0",
    "request": "^2.87.0",
    "rimraf": "^2.6.2",
    "validator": "^10.5.0"
  },
  "devDependencies": {
    "@types/lodash.flow": "^3.5.4",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-eslint": "8.2.6",
    "babel-preset-flow": "^6.23.0",
    "chai": "*",
    "eslint": "4.19.0",
    "eslint-config-airbnb": "17.0.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-flowtype": "2.50.0",
    "eslint-plugin-import": "2.13.0",
    "flow": "^0.2.3",
    "flow-bin": "0.78.0",
    "flow-coverage-report": "0.5.0",
    "mocha": "*",
    "nodemon": "^1.18.3"
  }
}
